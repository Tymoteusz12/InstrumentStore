@model BrandDTO

@{
    ViewData["Title"] = "Brand details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0 align-items-center">
                <div class="col-md-12">
                    <div class="card-header text-white bg-secondary">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.BrandName
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="d-flex justify-content-center m-4">
                    <img src="@Model.LogoURL" width="60%" alt="@Model.BrandName">
                </div>
                <div class="d-flex justify-content-center m-4">
                    <div class="card-body">
                        <p class="card-text"><b>Brand details </b>@Model.BrandDetails</p>
                        <p class="card-text"><b>Comment: </b>@Model.Comment</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {

                                <a class="btn btn-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                                <a class="btn btn-danger float-right" asp-action="DeleteBrand" asp-route-id="@Model.Id">Delete</a>
                            }
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                See all brands
                            </a>
                            <a class="btn btn-outline-primary float-right" asp-controller="Instruments" asp-action="Index">
                                Back to store
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>